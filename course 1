// working code
const express = require('express');
const app = express();
const server = require('http').createServer(app);
const io = require('socket.io')(server, { cors: { origin: "*" }});

server.listen(3000);
console.log('server is running');

app.get('/', (req, res) => {
    res.sendFile(__dirname + '/index.html');
