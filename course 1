app.use(express.static(path.join(__dirname, 'public'))); // makes it like if we are already in this folder
app.use(express.static(path.join(__dirname, 'views'))); // makes it like if we are already in this folder
app.use(express.static(path.join(__dirname, 'images'))); // makes it like if we are already in this folder ->  DOESNT WORK 
app.use("/images", express.static("images")); _/ _/ _/


